<?xml version="1.0" encoding="utf-8"?>

 <!-- 使用在item_home中对背景色进行更改 -->
 
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@android:color/holo_blue_dark" android:state_pressed="true"/>
 <!-- pressed -->
    <item android:drawable="@android:color/holo_blue_light" android:state_focused="true"/>
 <!-- focused -->
    <item android:drawable="@android:color/holo_blue_light" android:state_hovered="true"/>
 <!-- hovered -->
    <item android:drawable="@android:color/transparent"/>
 <!-- default -->

</selector>